// Custom styles.
// 主页文章添加阴影效果
 .post {
   margin-top: 60px;
   margin-bottom: 60px;
   padding: 25px;
   -webkit-box-shadow: 0 0 5px rgba(202, 203, 203, .5);
   -moz-box-shadow: 0 0 5px rgba(202, 203, 204, .5);
  }

  $font-family-base = "Microsoft YaHei", Verdana, sans-serif
  // 修改成你期望的宽度
  $content-desktop = 800px

  // 当视窗超过 1600px 后的宽度
  $content-desktop-large = 1000px


  // 颜色块-黄
